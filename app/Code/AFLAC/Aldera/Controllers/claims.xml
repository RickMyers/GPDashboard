<controller name="claims" use="Smarty3" author="Richard Myers" email="rmyers@aflacbenefitssolutions.com">
    <actions>
        <action name="lookup">
            <description>Returns claim data from the Aldera API</description>
            <entity namespace="humble" class="users" id='user'>
                <parameter name='uid' source='session' value='uid' default='' />
            </entity>
        </action>

        <!-- ############################################################### -->

    </actions>
</controller>