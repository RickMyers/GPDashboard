        },        
        {
            "active":	true,
            "id": 	"edit_location_name_submit",
            "placeholder": "",
            "longname":	"Location Submit",
            "title":	"",
            "type":     "button",
            "onclick":  function () {
                if (Edits['vision-edit-location'].validate()) {
                    (new EasyAjax('/vision/location/update')).packageForm('edit_ipa_location_form').then(function (response) {
                        var raw = {
                            data: JSON.parse(response)
                        }
                        $('#location_list').html(Argus.hedis.vision.locationtemplate(raw).trim());
                    }).post();
                }
            },
            "classname":"",
            "style":	"background-color: silver"
        }            
    ]
