
{
    "form":
    {
        "id":       "new_location_address_form",
        "drawme":   false,
        "action":   "",
        "method":   "post",
        "style":    "",
        "onenterkey":	"send"
    },
    "fields":
    [
        {
            "active":	true,
            "id": 	"new_location_address",
            "longname":	"Location Address",
            "title":	"New Location Address",
            "type":     "text",
            "required":	true,
            "force":	true,
            "classname":"",
            "style":	"border: 1px solid #aaf; padding: 2px; border-radius: 2px; width: 325px"
        },
        {
            "active":	true,
            "id": 	"new_location_id",
            "longname":	"Location ID",
            "title":	"",
            "type":     "hidden",
            "required":	true,
            "force":	true,
            "classname":"",
            "style":  "" 
        },                
        {
            "active":	true,
            "id": 	"new_address_npi",
            "longname":	"",
            "title":	"",
            "type":     "text",
            "minlength": 10,
            "maxlength": 10,
            "mask": "##########",
            "required":	true,
            "force":	true,
            "classname":"",
            "style":  "border: 1px solid #aaf; padding: 2px; border-radius: 2px" 
        },                
        

        {
            "active":	true,
            "id": 	"new_location_address_submit",
            "placeholder": "",
            "longname":	"Location Submit",
            "title":	"",
            "type":     "button",
            "onclick":  function () {
                if (Edits['vision-new-address'].validate()) {
                    (new EasyAjax('/vision/addresses/new')).packageForm('new_location_address_form').then(function (response) {
                        var raw = {
                            data: JSON.parse(response)
                        }
                        $('#address_list').html(Argus.hedis.vision.addresstemplate(raw).trim());
                    }).post();
                }
            },
            "classname":"",
            "style":	"background-color: silver"
        }            
    ]
}



