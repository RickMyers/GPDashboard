<controller name="attachment" use="Smarty3" author="Richard Myers" email="rmyers@aflacbenefitssolutions.com">
    <actions>
        <action name="open">
            <description>Opens an attachment</description>
            <entity response="true" namespace="vision" class="event_attachments" method="open">
                <parameter name="id" value='attachment_id' source='request' required="true"/>
            </entity>
        </action>

        <!-- ############################################################### -->

    </actions>
</controller>