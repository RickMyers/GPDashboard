<?xml version="1.0"?>
<!--

Scheduling general Argus events

For Controller reference, please see "Anatomy of a Controller" at https://humbleprogramming.com/pages/Controllers.htmls
-->
<controller name="schedule" use="Smarty3" author="Richard Myers" email="rmyers@argusdentalvision.com">
    <actions>
        <action name="available">
            <description>A person is scheduling that they will be available at a particular time</description>
            <entity namespace="humble" class="users" id='user'>
                <parameter name='uid' source='session' value='uid' default='' />
            </entity>
        </action>

        <!-- ############################################################### -->

    </actions>
</controller>