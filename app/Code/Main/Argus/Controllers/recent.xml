<?xml version="1.0"?>
<!--

Recent Activity Actions

For Controller reference, please see "Anatomy of a Controller" at http://jarvis.enicity.com/docs/controller.html
-->
<controller name="recent" use="Smarty3" author="Richard Myers" email="rmyers@argusdentalvision.com">
    <actions>
        <action name="init">
            <description>Sets up the recent activity app</description>
            <entity namespace="humble" class="user" id='user'>
                <parameter name='uid' source='session' value='uid' default='' />
            </entity>
        </action>

        <!-- ############################################################### -->
        
        <action name="activity">
            <description>Returns any and all recent activity for the person who is logged in</description>
        </action>
    </actions>
</controller>