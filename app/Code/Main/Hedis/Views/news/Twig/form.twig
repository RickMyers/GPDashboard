<style type="text/css">
    * {
        box-sizing: border-box;
    }

    .new_article_container {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
    }

    #news_article_form {
        padding: 40px;
        width: 95%;
	    margin: 20px auto;
	    background-color: #CACA0033;
        border-radius: 10px;
        -webkit-border-radius:10px;
        -moz-border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.13);
        -moz-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.13);
        -webkit-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.13);
    }

    label {
        font-size: 1.25rem;
        font-weight: bold;
    }

    input[type="text"], textarea {
        font-size: 1rem;
        margin-bottom: 1rem;
        background-color: #FFEBC9;
        border: 1px solid transparent;
        box-shadow: inset 0px 1px 1px rgba(0, 0, 0, 0.33);
	    -moz-box-shadow: inset 0px 1px 1px rgba(0, 0, 0, 0.33);
	    -webkit-box-shadow: inset 0px 1px 1px rgba(0, 0, 0, 0.33);
    }

    #news_article_title, #news_article_content {
        width: 100%;
    }

    #news_article_submit {
        text-align: right;
        float: right;
    }
</style>

<div class="new_article_container">
    <form id="news_article_form" name="news_article_form" onSubmit="return false;">
        <input type="hidden" name="page" id="news_article_page" value="1"></input>
        <input type="hidden" name="row" id="news_article_row" value="5"></input>
        <label for="news_article_title">Title</label>
        <br/>
        <input type="text" name="title" id="news_article_title"></input>
        <br/>
        <label for="news_article_content">Content</label>
        <br/>
        <textarea name="content" id="news_article_content" rows=10 cols=50 placeholder="Enter the article here..."></textarea>
        <br/>
        <input type="file" name="image" id="news_article_image"></input>
        <br/>
        <input type="submit" name="submit" id="news_article_submit"></input>
        <br/>
    </form>
</div>

<script>
    $("#news_article_submit").on('click', function(){
        if($("#news_article_title").val() && $("#news_article_content").val()) {
            (new EasyAjax("/hedis/news/save")).packageForm("news_article_form").then(function(response) {
                $("#office-news-data").html(response);
            }).post();
        }
    })
</script>